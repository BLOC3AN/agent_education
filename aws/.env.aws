# AWS Free Tier Environment Configuration
# Copy this file to .env.aws and fill in your actual values

# =============================================================================
# QDRANT CLOUD CONFIGURATION (Recommended for AWS Free Tier)
# =============================================================================
# Sign up at https://cloud.qdrant.io for free tier
QDRANT_URL=https://your-cluster-url.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=agent_education

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# OpenAI API (if using)
OPENAI_API_KEY=your-openai-api-key

# Google API (if using)
GOOGLE_API_KEY=your-google-api-key

# =============================================================================
# AWS OPTIMIZATION SETTINGS
# =============================================================================
# Enable lightweight mode for resource optimization
AWS_LIGHTWEIGHT_MODE=true

# Reduce memory usage
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=50
STREAMLIT_SERVER_MAX_MESSAGE_SIZE=50
STREAMLIT_LOGGER_LEVEL=WARNING

# Disable unnecessary features
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application environment
ENVIRONMENT=production

# Logging level (ERROR, WARNING, INFO, DEBUG)
LOG_LEVEL=WARNING

# Cache settings (if using Redis)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Set a secret key for session management
SECRET_KEY=your-secret-key-here

# CORS settings
ALLOWED_ORIGINS=*

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Limit concurrent requests
MAX_CONCURRENT_REQUESTS=5

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Memory limit for processing
MAX_MEMORY_MB=400
